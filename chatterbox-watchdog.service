[Unit]
Description=Chatterbox TTS watchdog (drop page caches and restart on OOM crash)
After=docker.service borg-ai-services.service
Requires=docker.service

[Service]
Type=simple
ExecStart=/home/muttleydosomething/chatterbox-watchdog.sh
Restart=always
RestartSec=10
User=root

[Install]
WantedBy=multi-user.target
